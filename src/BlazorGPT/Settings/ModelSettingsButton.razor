<RadzenButton Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Secondary" Variant="Variant.Outlined"  Text="Model" Click="OpenSettings"/>

@code
{
    [Parameter]
    public string? Class { get; set; }

    [Inject]
    DialogService? DialogService { get; set; }

    private async Task OpenSettings()
    {
        await DialogService!.OpenAsync<ModelSettings>("Model settings", options:new DialogOptions()
        {
            CloseDialogOnOverlayClick = true,
        });
    }
}