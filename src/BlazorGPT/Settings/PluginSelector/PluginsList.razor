@page "/settingsplugins"
<p>
    Select which plugins you want to use. 
    
    @if(_model.SelectedPlugins.Any(p => p.Selected))
    {
        <span class="float-end"> 

            <a @onclick="@ClearAll" class="link-warning"> [<RadzenIcon Icon="clear" IconColor="@Colors.Danger" /> Clear all ]</a>
        </span>
    }

</p>
<hr />

<EditForm Model="_model" OnValidSubmit="Submit">
    @for (var i = 0; i < _plugins.Count; i++)
    {
        var plugin = _plugins[i];
        var selected =  _model.SelectedPlugins[i];

        <h5>
            <InputCheckbox @bind-Value="@selected.Selected" @onclick="Submit"/> @plugin.Name
        </h5>
        <ul>
            @foreach (var function in plugin.Functions)
            {
                <li>
                    @function.Name 
                    <br />
                    <i>@function.Description</i>
                    
                </li>
            }
        </ul>
        <hr />
    }
</EditForm>
