<div class="row mb-2">
    <div class="col-4">
        <RadzenDropDownDataGrid id="sysprompt-dropdown-label" @ref="grid"
                                TValue="UserSystemPrompt"
                                Data=@Prompts 
                                TextProperty="Name"
                                AllowColumnResize="true"
                                AllowFilteringByAllStringColumns="true"
                                Name="DropDownDataGridColumns"
                                Density="Density.Compact"
                                Change="SelectedItemChange"
                                @bind-Value="SelectedPrompt"
                                Disabled="Disabled"
                                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                >
            <Columns>
                <RadzenDropDownDataGridColumn Property="Name" Title="Name" Width="100px"/>
                <RadzenDropDownDataGridColumn Property="Text" Title="Text"/>
            </Columns>
        </RadzenDropDownDataGrid>
    </div>
    <div class="col-7">
        @if (SelectedPrompt != null)
        {
            <RadzenTextBox Disabled="true" @bind-Value="SelectedPrompt.Text" class="textarea-full-width"/>
        }
    </div>
</div>